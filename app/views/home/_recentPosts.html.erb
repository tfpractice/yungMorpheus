<%= content_tag :div, class: "recentDiv recentPostsDiv #{section.name.parameterize.underscore.camelize(:lower)}Recents " do %>
<div class = "sectionLabel">
	<span><div class = "recentLabel recentPostsLabel" ><h1 class="labelText"> <%= link_to "#{section.name}", section_path(section) %></h1></div></span>
	</div>

	
	<div class = "infoBoxGallery">
		<%= render partial: "articles/infoBox", collection: section.articles.standalone, as: :article %>
	</div>
	<div class = "infoBoxGallery">
		<%= render partial: "serials/infoBox", collection: section.serials, as: :serial %>
	</div>

<%  end %>