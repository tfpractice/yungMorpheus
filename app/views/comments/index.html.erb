<p id="notice"><%= notice %></p>

<h1>Listing Comments</h1>

<table>
  <thead>
    <tr>
      <th>Authorable</th>
      <th>Commentable</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.authorable.screenname.to_s %></td>
        <td><%= comment.commentable.name %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', polymorphic_path([@section, @commentable, @comment]) %></td>
        <td><%= link_to 'Edit', edit_polymorphic_path([@section, @commentable, comment]) %></td>
        <td><%= link_to 'Destroy', polymorphic_path([@section, @commentable, comment]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', [:new, @section, @commentable, :comment] %>
