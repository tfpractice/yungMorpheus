<div class = "article">
	<%= render "header" %>
	
	<div class = "content articleContent">
		<%= kramdown(preprocess(@article.content)) %>
	</div>
	<%= content_tag(:div, class: "fb-comments", data: {href: "#{section_article_url(@article.section_id, :id => @article.id)}", numposts: "5", colorscheme: "light"}) do %>
	<h1> comments </h1>
	<%end %>

	<%= content_tag(:div, class: "commentsDiv") do %>


	<%# @article.comments.each do |comment| %>
	<%= render "comments/showComment" %>
	<%# end %>
	<%# if viewer_signed_in? %>
		<p><%= link_to "New Comment", [:new, @section, @commentable, :comment]%></p>
		<%# end %>

	<% end %>

	<div
		class="fb-like"
		data-share="true"
		data-width="450"
		data-show-faces="true">
	</div>
	
	<div class ="scriptDiv">
		<% @article.scripts.each do |script| %>
		<%= javascript_include_tag script.jscript.url %>
		<%end %>
	</div>
</div>